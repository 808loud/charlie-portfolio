{% import "macros/bootstrap.njk" as boot %}

<div id="{{ project.slug }}" class="modal modal-fullscreen">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="row bg-info">
        <div class="container">

          <div class="row">
            <div class="col-xs-12 text-center">
              <button type="button" class="btn btn-default" data-dismiss="modal"><span class="fa fa-close" aria-hidden="true"></span><span class="sr-only">Close</span></button>
            </div>
          </div><!-- .row -->

          {% block summary %}
          {% endblock %}

        </div><!-- .container -->
      </div><!-- .row.bg-info -->

      <div class="row">
          <div class="container">

            {% block description %}
            {% endblock %}

            <div class='row'>
              <div class='col-xs-12 text-center'>
                <button type='button' class='btn btn-default'><i class='fa fa-arrow-up' aria-hidden='true'></i><span class='sr-only'>Back to top</span></button>
              </div>
            </div>

          </div><!-- .container -->
      </div><!-- .row -->

    </div><!-- modal-content -->
  </div><!-- modal-dialog -->
</div><!-- .modal -->