<div class="row">
  <div class="col-sm-10 col-md-8 col-lg-7 col-sm-offset-2">
    <form>
      <div class="input-underline">
        <input id="name" placeholder="Name" type="text" class="form-control">
      </div>
      <div class="input-underline">
        <input id="email" placeholder="Email" type="email" class="form-control">
      </div>
      <div class="input-underline">
        <input id="company" placeholder="Company name" type="text" class="form-control">
      </div>
      <div class="input-underline">
        <textarea id="message" placeholder="How can I help you?" class="form-control" rows="6"></textarea>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-default">Send</button>
      </div>
    </form>
  </div>
</div>