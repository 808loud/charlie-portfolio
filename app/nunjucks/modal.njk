{% import 'macros/bootstrap.njk' as boot %}

<div id="{{ project.slug }}" class="modal modal-fullscreen fade">

  <div class="row">
    <div class="col-xs-12 text-center">
      <button type="button" class="btn btn-default" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    </div>
  </div>

  <div class="row bg-info">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <div class="row">
            <div class="col-xs-12">
              {{ boot.offset2col( "Work", project.title, project.summary ) }}
            </div>
          </div>
          <div class="row">
          	<div class="col-sm-9 col-sm-offset-3">
          	  <ul class="project-data list-unstyled">
          	    <li>Scope: {{ project.project_meta.scope }}</li>
          	    <li>Client: {{ project.project_meta.client }}</li>
          	    <li>Dev: {{ project.project_meta.dev }}</li>
          	  </ul>
          	</div>
          </div>
        </div><!-- .modal-body -->
      </div><!-- .modal-content -->
    </div><!-- modal-dialog -->
  </div><!-- .row -->


  {% block fuck %}
  {% endblock %}

  <div class='row'>
    <div class='col-xs-12 text-center'>
      <button type='button' class='btn btn-default'><i class='fa fa-arrow-up' aria-hidden='true'></i><span class='sr-only'>Back to top</span></button>
    </div>
  </div>

</div>