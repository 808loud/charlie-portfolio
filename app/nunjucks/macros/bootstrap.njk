{% set media_dir = "./media/" %}
{% set col2Left  = "col-sm-3 col-md-2"          + " col-sm-offset-0 col-md-offset-1" %}
{% set col2Right = "col-sm-8 col-md-7 col-lg-6" %}
{% set col1Right = "col-sm-8 col-md-7 col-lg-6" + " col-sm-offset-3" %}

{% macro offset2col( headerLeft, headerRight, contentRight ) %}
<div class="row">
	<div class="{{ col2Left }}">
		<h2 class="outline-heading">{{ headerLeft }}</h2>
	</div>
	<div class="{{ col2Right }}">
		<h4>{{ headerRight }}</h4>
		{{ contentRight }}
	</div>
</div>
{% endmacro %}

{% macro offset2colImg( headerLeft, imgSrc, imgWidth, imgHeight, imgAlt ) %}
<div class="row">
	<div class="{{ col2Left }}">
		<h2 class="outline-heading">{{ headerLeft }}</h2>
	</div>
	<div class="{{ col2Right }}">
		<!-- <p>dir: {{ site.media_directory }}</p> -->
		<img src="{{ site.media_directory }}{{ imgSrc }}" class="img-responsive" width="{{ imgWidth }}" height="{{ imgHeight }}" alt="{{ imgAlt }}" >
	</div>
</div>
{% endmacro %}

{% macro offset1col( headerRight, content ) %}
<div class="row">
	<div class="{{ col1Right }}">
		<h4>{{ headerRight }}</h4>
		<p>{{ content }}</p>
	</div>
</div>
{% endmacro %}

{% macro twoImg( img1, img2 ) %}
<div class="row">
	<div class="col-sm-3 col-sm-offset-2">
		<img src="1/{{ media }}{{ img1 }}" alt="" class="img-responsive">
	</div>
	<div class="col-sm-3">
		<img src="2/{{ media_dir }}{{ img2 }}" alt="" class="img-responsive">
	</div>
</div>
{% endmacro %}

{% macro oneImg( img1, imgAlt1 ) %}
<div class="row">
	<div class="col-xs-12">
		<img src="{{ site.media_directory }}{{ img1 }}" class="img-responsive" alt="{{ imgAlt1 }}">
	</div>
</div>
{% endmacro %}