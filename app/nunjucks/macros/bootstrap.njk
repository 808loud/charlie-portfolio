{% set media       = "./media/" %}
{% set colLeft     = "col-sm-3 col-md-2 col-sm-offset-0 col-md-offset-1" %}
{% set colRight    = "col-sm-8 col-md-7" %}
{% set offsetRight = "col-sm-offset-3" %}

{% macro row( headerLeft, headerRight, contentRight ) %}
<div class="row">
	{% if headerLeft -%}
	<div class="{{ colLeft }}">
		<h3 class="outline-heading">{{ headerLeft }}</h3>
	</div>
	{%- endif %}
	{% if headerRight or contentRight or caller -%}
	<div class="{{ colRight }}{% if not headerLeft %} {{ offsetRight }}{% endif %}">
		{% if headerRight -%}
		<h4>{{ headerRight }}</h4>
		{%- endif %}
		{% if caller -%}
		{{ caller() }}
		{%- endif %}
		{% if contentRight -%}
		{{ contentRight }}
		{%- endif %}
	</div>
	{%- endif %}
</div>
{% endmacro %}


{% macro img( img1, img2 ) %}
	<div class="row">
		{% if img1 and img2 %}
		<div class="col-sm-4 col-sm-offset-2">
			<img src="{{ media }}{{ img1 }}" alt="{{ img1 }}" class="img-responsive">
		</div>
		<div class="col-sm-4">
			<img src="{{ media }}{{ img2 }}" alt="{{ img2 }}" class="img-responsive">
		</div>
		{% elif img1 %}
		<div class="row">
			<div class="col-sm-10 col-sm-offset-1">
				<img src="{{ media }}{{ img1 }}" class="img-responsive" />
			</div>
		</div>
		{% else %}
		<!-- please provide an image path as a parameter -->
		{% endif %}
	</div>
{% endmacro %}

{% macro imgSm( img ) %}
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<img src="{{ media }}{{ img }}" alt="{{ img }}" class="img-responsive">
		</div>
	</div>
{% endmacro %}

{% macro imgXs( img ) %}
	<div class="row">
		<div class="col-sm-4 col-sm-offset-4">
			<img src="{{ media }}{{ img }}" alt="{{ img }}" class="img-responsive">
		</div>
	</div>
{% endmacro %}


{% macro imgFull( img, rowParams ) %}
	<div class="row" {{ rowParams }}>
			<img src="{{ media }}{{ img }}" alt="{{ img }}" class="img-responsive">
	</div>
{% endmacro %}


{% macro credits ( scope, client, dev ) %}
	{% if scope or client or dev -%}
	<ul class="project-data list-unstyled text-uppercase">
		{% if scope -%}
			<li>{{ scope }}</li>
		{%- endif %}
		{% if scope -%}
			<li>{{ client }}</li>
		{%- endif %}
		{% if scope -%}
			<li>{{ dev }}</li>
		{%- endif %}
	</ul>
	{%- endif %}
{% endmacro %}
