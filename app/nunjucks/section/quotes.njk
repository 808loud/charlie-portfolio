{% extends "partials/section.njk" %}

{% block headline -%}
Quotes
{%- endblock %}

{% block slug -%}
quotes
{%- endblock %}

{% block class -%}
container-fluid
{%- endblock %}

{% block content %}
<div class="row bg-primary">
  <div id="quote_carousel" class="col-xs-12 col-md-10 col-md-offset-1 col-lg-12 text-center carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      {% for quote in quotes %}
      <li data-target="#quote_carousel" data-slide-to="{{ quote.id }}" class="{{ quote.active }}"></li>
      {% endfor %}
    </ol>
    <div class="carousel-inner" role="listbox">
      {% for quote in quotes %}
      <div class="item {{ quote.active }}">
        <blockquote>
          <p class="font-size-xl g-md">&ldquo;{{ quote.quote }}&rdquo;</p>
          <footer>{{ quote.citation }}, {{ quote.title }}</footer>
        </blockquote>
      </div>
      {% endfor %}
    </div><!-- .carousel-inner -->
  </div><!-- #quote_carousel.col-xs-12 -->
</div><!-- .row -->
{% endblock %}
